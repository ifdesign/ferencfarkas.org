{
  "name": "ferencfarkas.org",
  "version": "0.1.0",
  "description": "JS utilities for the ferencfarkas.org project",
  "main": "index.js",
  "scripts": {
    "frontend:dev": "parcel ./website/frontend/index.html",
    "frontend:build": "cross-env NODE_ENV='production' node ./website/frontend/build.js --entry ./website/frontend/index.html --target ./website/assets --hugo-config ./website/config.toml",
    "catalogue:pdf": "node ./catalogue/pdf-generator/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "website/frontend/src/**/*.{js,vue}": [
        "eslint --fix",
        "git add"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ifdesign/ferencfarkas.org.git"
  },
  "author": "Istvan Farkas <istvan@blez.org>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ifdesign/ferencfarkas.org/issues"
  },
  "homepage": "https://github.com/ifdesign/ferencfarkas.org#readme",
  "devDependencies": {
    "@vue/component-compiler-utils": "^3.0.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.2",
    "fs-extra": "^7.0.1",
    "husky": "^2.2.0",
    "js-yaml": "^3.13.1",
    "lint-staged": "^8.1.6",
    "parcel-bundler": "^1.12.3",
    "toml": "^3.0.0",
    "tomlify-j0.4": "^3.0.0",
    "vue-template-compiler": "^2.6.10",
    "yargs": "^13.2.2"
  },
  "dependencies": {
    "pdfmake": "^0.1.53",
    "shelljs": "^0.8.3",
    "vue": "^2.6.10",
    "vue-hot-reload-api": "^2.3.3",
    "yaml": "^1.3.2"
  }
}
